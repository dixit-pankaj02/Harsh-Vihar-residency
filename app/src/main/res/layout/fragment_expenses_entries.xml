<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpensesEntries">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"

            android:orientation="vertical"
            android:padding="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/lblname"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Biller(s)"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblnameAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblname"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/spinnerName"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblnameAsteric"
                    android:background="@drawable/textborder"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/lblType"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Type"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblTypeAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblType"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtType"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblTypeAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Expenses Type"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/lblMode"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Mode"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblmodeAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblMode"
                    android:text="*"
                    android:textColor="#ff00" />

                <Spinner
                    android:id="@+id/spnMode"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblmodeAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Mode"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/lblTransactionId"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Ref. No"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblTransactionIdAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblTransactionId"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtRefNo"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblTransactionIdAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Transaction number"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/lblMobNo"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Amount"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblMobnoAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblMobNo"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtAmount"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblMobnoAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Amount"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/lblDate"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Date"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblDateAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblDate"
                    android:text="*"
                    android:textColor="#ff00" />
                <TextView
                    android:id="@+id/dteDate"
                    android:layout_width="280dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="102dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/textborder"
                    android:clickable="true"
                    android:ems="10"
                    android:gravity="left|center"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp">

                <Button
                    android:id="@+id/SaveExpense"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Save Entry"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/text_border_orange"/>

                <Button
                    android:id="@+id/updateExpense"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Update entry"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/text_border_orange"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>