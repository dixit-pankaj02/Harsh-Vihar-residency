<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectionEntries">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblname"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Name"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblnameAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblname"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/spinnerName"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/lblnameAsteric"
                    android:background="@drawable/textborder"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblHno"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="House No"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblHnoAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblHno"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtHno"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/lblHnoAsteric"
                    android:background="@drawable/textborder"
                    android:hint="House Number"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblCollBy"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Co. Sec."

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblCollByAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblCollBy"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtCollBy"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/lblCollByAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Collection By"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblType"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Type"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblTypeAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblType"
                    android:text="*"
                    android:textColor="#ff00" />

                <Spinner
                    android:id="@+id/spnCollType"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/lblTypeAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Collection Type"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblMode"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Mode"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblmodeAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblMode"
                    android:text="*"
                    android:textColor="#ff00" />

                <Spinner
                    android:id="@+id/spnMode"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/lblmodeAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Mode"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblTransactionId"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Ref. No"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblTransactionIdAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblTransactionId"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtRefNo"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/lblTransactionIdAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Transaction number"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblAmount"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Amount"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblAmountAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblAmount"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtAmount"
                    android:layout_width="264dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/lblAmountAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Amount"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/lblDate"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Date"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblDateAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblDate"
                    android:text="*"
                    android:textColor="#ff00" />

                <TextView
                    android:id="@+id/dteDate"
                    android:layout_width="265dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="104dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/textborder"
                    android:clickable="true"
                    android:ems="10"
                    android:gravity="left|center"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblmonth"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="Month"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblMonthAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblmonth"
                    android:text="*"
                    android:textColor="#ff00" />

                <Spinner
                    android:id="@+id/spnMonth"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/lblMonthAsteric"
                    android:background="@drawable/textborder"
                    android:entries="@array/monthList"
                    android:hint="Month"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lblYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/spnMonth"
                    android:text="Year"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblYearAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblYear"
                    android:text="*"
                    android:textColor="#ff00" />

                <Spinner
                    android:id="@+id/spnYear"
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/lblYearAsteric"
                    android:background="@drawable/textborder"
                    android:entries="@array/yearList"
                    android:hint="Year"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp">

                <Button
                    android:id="@+id/saveCollection"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/text_border_orange"
                    android:text="Save Entry"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/updateCollection"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/text_border_orange"
                    android:text="Update entry"
                    android:textColor="@color/colorPrimaryDark" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>