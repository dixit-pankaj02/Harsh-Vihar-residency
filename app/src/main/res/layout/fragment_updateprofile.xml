<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragupdateProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".updateprofile">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblFirstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="11dp"
                    android:text="First name"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblFirstnameAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblFirstname"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtfirstname"
                    android:layout_width="279dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblFirstnameAsteric"
                    android:background="@drawable/textborder"
                    android:focusedByDefault="true"
                    android:hint="First name"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblLastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="11dp"
                    android:text="Last name"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblLastnameAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblLastname"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtlastname"
                    android:layout_width="279dp"
                    android:layout_height="35dp"

                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblLastnameAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Last name"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblHNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="11dp"
                    android:text="House No."
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblHnoAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblHNo"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtHno"
                    android:layout_width="279dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblHnoAsteric"
                    android:background="@drawable/textborder"
                    android:hint="House number"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblMobNo"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="11dp"
                    android:text="Mobile"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblMobnoAsteric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/lblMobNo"
                    android:text="*"
                    android:textColor="#ff00" />

                <EditText
                    android:id="@+id/txtMobilenumber"
                    android:layout_width="279dp"
                    android:layout_height="35dp"

                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblMobnoAsteric"
                    android:background="@drawable/textborder"
                    android:hint="Mobile number"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblEmail"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="11dp"
                    android:text="Email Id"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/txtemail"
                    android:layout_width="279dp"
                    android:layout_height="35dp"

                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblEmail"
                    android:background="@drawable/textborder"
                    android:hint="Email id"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblfamily"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="11dp"
                    android:text="Member"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/txtfamilymember"
                    android:layout_width="279dp"
                    android:layout_height="35dp"

                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/lblfamily"
                    android:background="@drawable/textborder"
                    android:hint="Family member(s) 18+"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/saveProfile"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/text_border_orange"
                    android:text="Register"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/updateProfile"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/text_border_orange"
                    android:text="Update"
                    android:textColor="@color/colorPrimaryDark" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/color_green"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txtusername"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:background="#ffffff"
                    android:hint="enter login name"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtpassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:background="#ffffff"
                    android:hint="enter password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtconfirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:background="#ffffff"
                    android:hint="enter confirm password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spnUserType"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/textborder"
                    android:hint="select user type"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Register" />

                    <!-- <Button
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentEnd="true"
                         android:text="Update" />-->
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</FrameLayout>