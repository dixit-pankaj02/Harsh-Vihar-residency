<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_UserImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/roundingimageborder" />

        <ImageView
            android:id="@+id/imgTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/image_UserImage"
            android:src="@drawable/ic_take_photo" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutProfileBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbluserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_regular"
            android:gravity="left"
            android:text="pankaj.dixit@impressico.com" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblFirstname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="First name"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lblFirstnameAsteric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_toRightOf="@id/lblFirstname"
                        android:text="*"
                        android:textColor="#ff00" />

                    <EditText
                        android:id="@+id/txtfirstname"
                        android:layout_width="279dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@id/lblFirstnameAsteric"
                        android:background="@drawable/textborder"
                        android:focusedByDefault="true"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="First name"
                        android:paddingLeft="10dp"
                        android:textSize="20sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblLastname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Last name"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lblLastnameAsteric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_toRightOf="@id/lblLastname"
                        android:text="*"
                        android:textColor="#ff00" />

                    <EditText
                        android:id="@+id/txtlastname"
                        android:layout_width="279dp"
                        android:layout_height="35dp"

                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@id/lblLastnameAsteric"
                        android:background="@drawable/textborder"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Last name"
                        android:paddingLeft="10dp"
                        android:textSize="20sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblHNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="House No."
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lblHnoAsteric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_toRightOf="@id/lblHNo"
                        android:text="*"
                        android:textColor="#ff00" />

                    <EditText
                        android:id="@+id/txtHno"
                        android:layout_width="279dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@id/lblHnoAsteric"
                        android:background="@drawable/textborder"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="House number"
                        android:paddingLeft="10dp"
                        android:textSize="20sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblMobNo"
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Mobile"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lblMobnoAsteric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_toRightOf="@id/lblMobNo"
                        android:text="*"
                        android:textColor="#ff00" />

                    <EditText
                        android:id="@+id/txtMobilenumber"
                        android:layout_width="279dp"
                        android:layout_height="35dp"

                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@id/lblMobnoAsteric"
                        android:background="@drawable/textborder"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Mobile number"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textSize="20sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblEmail"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Email Id"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtemail"
                        android:layout_width="279dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@id/lblEmail"
                        android:background="@drawable/textborder"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Email id"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textSize="20sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblfamily"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Member"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtfamilymember"
                        android:layout_width="279dp"
                        android:layout_height="35dp"

                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@id/lblfamily"
                        android:background="@drawable/textborder"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Family member(s) 18+"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textSize="20sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/updateProfile"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/text_border_orange"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Update"
                        android:textColor="@color/colorPrimaryDark" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>